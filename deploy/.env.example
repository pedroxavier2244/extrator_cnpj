# Copie este arquivo para .env na raiz do projeto e preencha os valores
# cp deploy/.env.example .env

# --- Banco de dados (obrigatório) ---
DATABASE_URL=postgresql+psycopg2://cnpj_user:SUA_SENHA@localhost:5432/cnpj

# --- Caminhos de dados ---
RAW_DATA_PATH=/opt/extrator_cnpj/data/raw
STAGING_PATH=/opt/extrator_cnpj/data/staging
PROCESSED_PATH=/opt/extrator_cnpj/data/processed

# --- ETL ---
BATCH_SIZE=30000          # Reduza para 10000 se o servidor tiver pouca RAM (< 2GB)
ETL_HASH_ALGORITHM=sha256

# --- API ---
API_V1_PREFIX=/api/v1
APP_NAME=Sistema CNPJ
LOG_LEVEL=INFO

# --- Pool de conexões com o banco ---
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# --- Cache Redis (opcional) ---
# Deixe vazio para desabilitar. Recomendado habilitar se tiver muitas consultas simultâneas.
REDIS_URL=
CACHE_TTL_SECONDS=86400
BATCH_MAX_SIZE=1000
